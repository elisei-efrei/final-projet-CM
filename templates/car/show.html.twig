{% extends 'base.html.twig' %}

{% block title %}{{ car.nom }}{% endblock %}

{% block body %}
<section class="content-section" style="padding-top: 8rem;">
    <a href="{{ path('app_car_index') }}" style="text-decoration: none; color: #e5e5e5; margin-bottom: 2rem; display: inline-block;">← Retour à la liste</a>
    
    <div class="car-detail-container" style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; margin-top: 2rem;">
        <div class="car-image">
            {% if car.image %}
                <img src="{{ car.image }}" alt="{{ car.nom }}" style="width: 100%; height: 500px; object-fit: cover; border: 1px solid rgba(255, 255, 255, 0.1);">
            {% else %}
                <div style="width: 100%; height: 500px; background-color: #1a1a1a; border: 1px solid rgba(255, 255, 255, 0.1); display: flex; align-items: center; justify-content: center;">
                    <p style="color: #666;">Image non disponible</p>
                </div>
            {% endif %}
        </div>
        
        <div class="car-info">
            <h1 style="font-size: 3rem; font-weight: 300; margin-bottom: 1rem;">{{ car.nom }}</h1>
            <p style="font-size: 2rem; color: #e5e5e5; margin-bottom: 2rem;">{{ car.prix }} €</p>
            
            <div style="margin-bottom: 3rem; padding-bottom: 2rem; border-bottom: 1px solid rgba(255, 255, 255, 0.1);">
                <h3 style="font-size: 1.3rem; font-weight: 400; margin-bottom: 1rem; color: #e5e5e5;">Description</h3>
                <p style="line-height: 1.8; color: #e5e5e5;">{{ car.description }}</p>
            </div>
        </div>
    </div>
</section>

<style>
    @media (max-width: 768px) {
        .car-detail-container {
            grid-template-columns: 1fr !important;
        }
    }
</style>
{% endblock %}

